        {current.context}
      </div>

      {/* Dialogue turn */}
      <AnimatePresence mode="wait">
        <motion.div
          key={dialogIdx}
          initial={{ opacity: 0, y: 12 }}
          animate={{ opacity: 1, y: 0 }}
          exit={{ opacity: 0, y: -12 }}
          style={{
            background: 'white', borderRadius: 18, padding: '28px 24px',
